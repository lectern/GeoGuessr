{
    "manifest_version": 2,
    "name": "GeoGuessr RPC",
    "description": "RPC for GeoGuessr",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "http://127.0.0.1:5000/*",
        "*://*/*"
    ]
}